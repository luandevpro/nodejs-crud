<div class="jumbotron text-center">
   <h1>All Events</h1>
</div>

<% if (success.length > 0) { %>
   <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-hover table-bordred table-sstriped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Description</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      <% for (event of events) { %>
         <tr>
            <th><%= event.name %></th>
            <th><%= event.description %></th>
            <th>
               <a href="/events/<%= event.slug %>" class="btn btn-success">View</a>
               <a href="/events/<%= event.slug %>/edit" class="btn btn-primary">Edit</a>
               <a href="/events/<%= event.slug %>/delete" class="btn btn-danger">Delete</a>
            </th>
         </tr>
      <% } %>`
   </tbody>
</table>